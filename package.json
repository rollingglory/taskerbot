{
  "name": "taskerbot",
  "version": "1.1.0",
  "description": "bot for tasker #RGB",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "start": "node server",
    "nowls": "now ls taskerbot | tail -n +6 | tr -s ' ' | cut -d ' ' -f 2",
    "now": "now --public",
    "postnow": "now alias && now rm -y $(npm run nowls --silent)",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Muhammad Hasby",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "axios": "^0.18.0",
    "cachegoose": "^5.0.0",
    "date-fns": "^1.29.0",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-conditional-get": "^2.0.0",
    "koa-etag": "^3.0.0",
    "koa-mount": "^3.0.0",
    "koa-route": "^3.2.0",
    "koa-send": "^4.1.3",
    "koa-static": "^4.0.3",
    "moment": "^2.21.0",
    "mongoose": "^5.1.2",
    "node-telegram-bot-api": "^0.30.0",
    "vue": "^2.5.16",
    "vue-axios": "^2.1.1",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "now": {
    "alias": "rgb-task",
    "dotenv": true
  },
  "eslintConfig": {
    "extends": "bentinata"
  },
  "nodemonConfig": {
    "ignore": [
      "package.json",
      "src/*",
      "taskerview/*"
    ],
    "watch": [
      "app.js",
      "bot.js",
      "index.js",
      "server.js",
      "web.js",
      "webpack.config.js",
      "models/*",
      "routes/*"
    ]
  },
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.1",
    "eslint-config-bentinata": "^2.1.1",
    "eslint-plugin-lodash": "^2.7.0",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-promise": "^3.7.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "koa-webpack": "^4.0.0",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "pino": "^4.15.0",
    "prettier": "^1.11.1",
    "style-loader": "^0.21.0",
    "vue-loader": "^15.2.0",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "wherr": "^1.0.0"
  }
}
